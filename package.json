{
  "name": "bitbucket-cloud-mcp",
  "version": "1.0.0",
  "description": "Bitbucket Cloud MCP server for Claude Code - PR review, diffs, and comments",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "bitbucket-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
